<h1>List of restaurants</h1>
<% @restaurants.each do |restaurant| %>
  <h2><%= restaurant.name %></h2>
  <p><%= restaurant.address %></p>
  <p> <%= restaurant.category %></p>
  <p><%= link_to "See details", restaurant_path(restaurant), class: "btn btn-primary" %></p>
  <% end %>
  <p><%= link_to "Add a restaurant", new_restaurant_path, class: "btn btn-primary" %></p>
